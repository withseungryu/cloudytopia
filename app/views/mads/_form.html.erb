<head>
   <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
   <script type="text/javascript" src="/assets/jquery.raty.js"></script>
</head>
<style>
   .form{
       display: flex;
       flex-direction: column;
       text-align: center;
   }
   .ti_te, .sc_te, .me_te, .submit{
       margin-top: 2%;
   }
   .submit{
       color:black;
   }
</style>
<div class="form" >
<%= form_for a do |m|  %>
    <%= m.label :title , class:"ti_la"  %>
    <%= m.text_field :title , class:"ti_te form-control" %><br>
    
    <div id="rating-form1">
        <label>청결</label>
    </div>
    <%#= m.label :score , class:"sc_la"  %>
    <%#= m.text_field :score , class:"sc_te"  %>
  
    <div id="star-rating1"></div><br>
    <div id="rating-form2">
        <label>안전</label>
    </div>
    <%#= m.label :score , class:"sc_la"  %>
    <%#= m.text_field :score , class:"sc_te"  %>
  
    <div id="star-rating2"></div><br>
    <div id="rating-form3">
        <label>시설</label>
    </div>
    <%#= m.label :score , class:"sc_la"  %>
    <%#= m.text_field :score , class:"sc_te"  %>
  
    <div id="star-rating3"></div><br>
    <%= m.label :ment , class:"me_la"  %>
    <%= m.text_area :ment , class:"me_te form-control"  %><br>
    
    <%= m.submit value: "제출", class:"submit btn btn-primary" %>
    
<% end %> 

    
</div>
<script>
    $('#rating-form1').raty({
        path: '/assets/',
        scoreName: 'mad[score1]'
    });
    $('#rating-form2').raty({
        path: '/assets/',
        scoreName: 'mad[score2]'
    });
    $('#rating-form3').raty({
        path: '/assets/',
        scoreName: 'mad[score3]'
    });
</script>